{% extends 'base.html.twig' %}

{% block title %}Пользователи{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex flex-column w-50 justify-content-center align-items-center mx-auto">
            {% for user in users %}
                <div class="card w-100 mb-3">
                    <div class="card-body">
                        <div class="d-flex flex-row align-items-center">
                            <div class="card-image me-4" style="height: 64px; width: 64px; background: #e2e2e2; border-radius: .375rem;"></div>
                            <div class="card-info d-flex flex-row align-items-center w-100 justify-content-between">
                                <div class="d-flex flex-row">
                                    <h3 class="me-2">{{ user.getUsername() }}</h3>
                                    <p class="text-muted">({{ user.getEmail() }})</p>
                                </div>
                                {% if user.getId() != app.user.getId() %}
                                <div>
                                    <a class="btn btn-outline-dark" href="{{ path('app_dialogs_with_id', {id : user.getId()}) }}">Написать сообщение</a>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
