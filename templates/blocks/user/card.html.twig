<div class="card w-100 mb-3">
    <div class="card-body">
        <div class="d-flex flex-row align-items-center">
            <div class="card-image me-4" style="height: 64px; width: 64px; background: #e2e2e2; border-radius: .375rem;"></div>
            <div class="card-info d-flex flex-row align-items-center w-100 justify-content-between">
                <div class="d-flex flex-row">
                    <h3 class="me-2">{{ username }}</h3>
                    <p class="text-muted">({{ email }})</p>
                </div>
                <div>
                    <a class="btn btn-outline-dark" href="{{ path('app_dialogs_with_id', {id : id}) }}">Написать сообщение</a>
                </div>
            </div>
        </div>
    </div>
</div>